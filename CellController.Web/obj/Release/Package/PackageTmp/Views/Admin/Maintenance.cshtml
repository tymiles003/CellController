
@{
    Layout = "~/Views/Shared/template/_Layout.cshtml";
}
@section content {

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="col-md-6" style="text-align:left;">
                        <h3 class="panel-title">Supplier Company</h3>
                    </div>
                    <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                        <span id="cmdAddNew" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                 id="SupplierGrid"
                                 grid-width="100"
                                 data-url="/Supplier/GetSuppliers"
                                 grid-selection-mode="singlerow"
                                 grid-pagesizeoptions="5,10,20,50,100"
                                 grid-child="ContactPersonGrid"
                                 grid-hide-columns="0,1,11,12"
                                 data-action-buttons="Edit,Inactive"
                                 data-statusbar-buttons="Export to Excel,Clear Filter"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="col-md-6" style="text-align:left;">
                        <h3 class="panel-title">Contact Person</h3>
                    </div>
                    <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                        <span id="cmdAddContact" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;display:none;"></span>
                    </div>
               </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <br />
                                <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                     id="ContactPersonGrid"
                                     grid-width="100"
                                     data-url="/ContactPerson/GetSuppliers"
                                     grid-pagesizeoptions="5,10,20,50,100"
                                     grid-selection-mode="singlerow"
                                     grid-hide-columns="0,1,2,9,10"
                                     data-action-buttons="Edit,Inactive"
                                     data-statusbar-buttons="Export to Excel"></div>
                                    @*<p><a id="exportExcelContact" href="#">Export to Excel</a></p>*@
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
}
@section JavaScript {
    <script src="~/Scripts/pages/Maintenance.js"></script>
}
