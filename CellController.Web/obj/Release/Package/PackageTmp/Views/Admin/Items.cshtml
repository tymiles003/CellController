
@{
    Layout = "~/Views/Shared/template/_Layout.cshtml";
}
@section content {
<div class="row">
    <div class="col-md-12">
        <div role="tabpanel">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#tab1" role="tab" data-toggle="tab">Item</a></li>
                <li role="presentation"><a href="#tab2" role="tab" data-toggle="tab">Item Category</a></li>
                <li role="presentation"><a href="#tab3" role="tab" data-toggle="tab">Item Type</a></li>
                <li role="presentation"><a href="#tab4" role="tab" data-toggle="tab">Unit of Measure</a></li>
                <li role="presentation"><a href="#tab5" role="tab" data-toggle="tab">Item Department</a></li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="tab1">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="col-md-6" style="text-align:left;">
                                <h3 class="panel-title">Item</h3>
                            </div>
                            <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                                <span id="btnSupplier" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <br />
                                    <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                         id="ItemGrid"
                                         grid-width="100"
                                         data-url="/Items/GetItems"
                                         grid-pagesizeoptions="10,20,50,100"
                                         grid-selection-mode="singlerow"
                                         grid-hide-columns="0,8"
                                         data-action-buttons="Inactive"
                                         data-statusbar-buttons="Export to Excel"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="tab2">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <div class="col-md-6" style="text-align:left;">
                                <h3 class="panel-title">Category</h3>
                            </div>
                            <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                                <span id="btnCategory" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <br />
                                        <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                             id="CategoryGrid"
                                             grid-width="100"
                                             data-url="/Items/GetItemCategories"
                                             grid-pagesizeoptions="5,10,20,50,100"
                                             grid-selection-mode="singlerow"
                                             grid-hide-columns="0,3"
                                             data-action-buttons="Inactive"
                                             data-statusbar-buttons="Export to Excel"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="tab3">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <div class="col-md-6" style="text-align:left;">
                                <h3 class="panel-title">Type</h3>
                            </div>
                            <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                                <span id="btnType" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <br />
                                        <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                             id="TypeGrid"
                                             grid-width="100"
                                             data-url="/Items/GetItemTypes"
                                             grid-pagesizeoptions="5,10,20,50,100"
                                             grid-selection-mode="singlerow"
                                             grid-hide-columns="0,3"
                                             data-action-buttons="Inactive"
                                             data-statusbar-buttons="Export to Excel"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="tab4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="col-md-6" style="text-align:left;">
                                <h3 class="panel-title">Unit of measure</h3>
                            </div>
                            <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                                <span id="btnMeasure" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <br />
                                        <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                             id="MeasureGrid"
                                             grid-width="100"
                                             data-url="/Items/GetUnitOfMeasures"
                                             grid-pagesizeoptions="5,10,20,50,100"
                                             grid-selection-mode="singlerow"
                                             grid-hide-columns="0,3"
                                             data-action-buttons="Inactive"
                                             data-statusbar-buttons="Export to Excel"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="tab5">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="col-md-6" style="text-align:left;">
                                <h3 class="panel-title">Item Department</h3>
                            </div>
                            <div class="col-md-6" style="margin-top:-2px;text-align:right;">
                                <span id="btnDept" class="glyphicon glyphicon-plus" aria-hidden="true" style="cursor:pointer;"></span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <br />
                                        <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar"
                                             id="DepartmentGrid"
                                             grid-width="100"
                                             data-url="/Items/GetItemDepartment"
                                             grid-pagesizeoptions="5,10,20,50,100"
                                             grid-selection-mode="singlerow"
                                             grid-hide-columns="0,3"
                                             data-action-buttons="Inactive"
                                             data-statusbar-buttons="Export to Excel"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
@section JavaScript {
<script src="~/Scripts/pages/Items.js"></script>
}