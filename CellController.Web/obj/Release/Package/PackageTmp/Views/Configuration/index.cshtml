@{
    Layout = "~/Views/Shared/template/_Layout.cshtml";
}

@section content {

    <link href="~/Content/CustomPanel.css" rel="stylesheet" />
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-info panel-custom-myheading">
                <div class="panel-heading">
                    <h3 class="panel-title" id="titleView">Manage Machine Type</h3>
                    <button id="cmdAddNew" class="btn btn-success" style="float:right; top:-8px; position:relative; box-shadow:3px 3px 1px #168572;"><i class="fa fa-plus" aria-hidden="true"></i> New Machine Type</button>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12" id="mainGridContainer">
                            <br />
                            <div class="jqxgrid jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar jqxgrid-toolbar jqxgrid-columnsresize"
                                 id="EquipmentTypeGrid"
                                 grid-width="100"
                                 data-url="/Configuration/GetEquipmentType"
                                 grid-selection-mode="singlerow"
                                 grid-pagesizeoptions="10,15,20,50,100"
                                 grid-hide-columns="0"
                                 data-action-buttons="Edit,Delete">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-info panel-custom-myheading">
                <div class="panel-heading">
                    <h3 class="panel-title" id="titleView">Manage Configuration</h3>
                </div>
                <div class="panel-body">
                    <br />
                    <div class="col-md-12">
                        <div class="form-group form-inline col-md-12">
                            <label for="txtTolerance">Tolerance:</label><br />
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtTolerance" placeholder="Tolerance" onKeyPress="return check(event,value)" onInput="checkLength()" />
                                <span class="input-group-btn" title="Percent" data-toggle="tooltip">
                                    <button class="btn btn-default" type="button" disabled="disabled">
                                        <span>%</span>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="chkOPCTimeout">Enable OPC Command Timeout:</label><br />
                            @if (ViewBag.isOPCTimeout == true)
                            {
                                <label><input type="checkbox" id="chkOPCTimeout" checked="checked">Enabled</label>
                            }
                            else
                            {
                                <label><input type="checkbox" id="chkOPCTimeout">Enabled</label>
                            }
                        </div>
                        <div class="form-group form-inline col-md-12">
                            <label for="txtOPCTimeout">OPC Command Timeout:</label><br />
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtOPCTimeout" placeholder="OPC Command Timeout" />
                                <span class="input-group-btn" title="Seconds" data-toggle="tooltip">
                                    <button class="btn btn-default" type="button" disabled="disabled">
                                        <span>s</span>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-md-12" style="display:none;">
                            <label for="chkSignalR">Enable SignalR:</label><br />
                            @if (ViewBag.SignalR == true)
                            {
                                <label><input type="checkbox" id="chkSignalR" checked="checked">Enabled</label>
                            }
                            else
                            {
                                <label><input type="checkbox" id="chkSignalR">Enabled</label>
                            }
                        </div>
                        <div class="form-group col-md-12">
                            <label for="chkScanner">Enable Barcode Scanner:</label><br />
                            @if (ViewBag.isScanner == true)
                            {
                                <label><input type="checkbox" id="chkScanner" checked="checked">Enabled</label>
                            }
                            else
                            {
                                <label><input type="checkbox" id="chkScanner">Enabled</label>
                            }
                        </div>
                        <div class="form-group col-md-12">
                            <label for="chkHost">Enable Host Enrollment:</label><br />
                            @if (ViewBag.isHostEnabled == true)
                            {
                                <label><input type="checkbox" id="chkHost" checked="checked">Enabled</label>
                            }
                            else
                            {
                                <label><input type="checkbox" id="chkHost">Enabled</label>
                            }
                        </div>
                        <div class="form-group col-md-12">
                            <label for="chkHost">Enable Effectivity Date:</label><br />
                            @if (ViewBag.isEffectiveDate == true)
                            {
                                <label><input type="checkbox" id="chkEffectiveDate" checked="checked">Enabled</label>
                            }
                            else
                            {
                                <label><input type="checkbox" id="chkEffectiveDate">Enabled</label>
                            }
                        </div>
                        <div class="form-group form-inline col-md-12">
                            <label for="txtNoMarkTemplate">No Mark Template Filename:</label><br />
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtNoMarkTemplate" style="text-transform:uppercase;" placeholder="No Mark Template Filename" />
                            </div>
                        </div>
                        <div class="form-group form-inline col-md-12">
                            <label for="txtDefaultPassword">New Account Default Password:</label><br />
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtDefaultPassword" placeholder="New Account Default Password" />
                            </div>
                        </div>
                        <div class="form-group col-md-12"></div>
                        <div class="col-md-12" style="text-align:center;">
                            <button id="btnSave" class="btn btn-info">Save</button>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section JavaScript {
    <script src="~/Scripts/pages/admin/configuration.js"></script>
}